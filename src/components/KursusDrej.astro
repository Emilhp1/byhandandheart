---
import "../styles/style.css";
import Button from "./Button.astro";
const {variant, kursus, pris, imgPath } = Astro.props;
---
<div class="kurserne">
	<div data-variant={variant} class="top">
		<h3>{kursus}</h3>
		<p>{pris}</p>
	</div>
	<div class="bottom">
        <div>
            <Button/>
        </div>
        <img src={imgPath} alt="Dreje kursus">
	</div>
</div>

<style>
.kurserne{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.top{
    width: 300px;
    height: 170px;
    padding: 6% 0% 0% 5%;
}
h3{
    font-size: 8cqw;
    margin-bottom: 7%;
}
p:before {
    content:"â€¢ ";
}
p{
    font-size: 5cqw;
}
img{
    background-size: cover;
    width: 300px;
    z-index: -1;
    }
.bottom{
    position: relative;
    margin-bottom: 10%;
}
[data-variant="one"]{
    background-color: var(--box_one);
}
[data-variant="two"]{
    background-color: var(--box_two);
 
}
[data-variant="three"]{
    background-color: var(--box_three);

}
@media (min-width: 900px) {
.kurserne{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 10%;
}
.top {
    width: 350px;
    padding: 6% 0% 0% 5%;
}
img{
    background-size: cover;
    width: 350px;
    height: 350px;
    }
h3{
    font-size: 2cqw;
}

p{
    font-size: 1.5cqw;}
}
</style>