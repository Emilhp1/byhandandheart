---
import "../styles/style.css";
import KursusTicket from "./KursusTicket.astro";
---

<section>
	<h2>Mine kurser</h2>
	<p>Skulle du have specielle ønsker til kurser eller arrangementer, er du meget velkommen til at kontakte mig på mail eller telefon</p>
</section>
<section class="courses">
<KursusTicket 
variant="one";
kursus="Drejekurser";
pris="Pris: 1950 kr.";
imgPath="/pic/kursus_dreje.webp";
/>

<KursusTicket 
variant="two";
kursus="Lav din egen kop";
pris="Pris: 850 kr.";
imgPath="/pic/kursus_kop.webp";
/>

<KursusTicket 
variant="three";
kursus="Modellering og pladeteknik";
pris="Pris: 975 kr.";
imgPath="/pic/kursus_plade.webp";
/>

</section>
<style>

section{
    margin: 1% 0% 2% 3%;
}
h2{
    padding-top: 3%;
    font-size: 10cqw;
}

p{
    padding-bottom: 5%;

}
.courses{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
@media (min-width: 900px) {
h2{
    font-size: 5rem;
}
p{
    width: 1155px;
}
.courses{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
}
}
</style>