---
import "../styles/style.css";
const {kursus, pris, nyhed, imgPath} = Astro.props;
---

<div class="kurserne">
	<div class="top">
		<h3>{kursus}</h3>
		<p>{pris}</p>
	</div>
	<div>
    <img src={imgPath} alt="Kursus billeder">
        <div>
		<h3>{nyhed}</h3>
		<a href="imgPath">Bestil tid</a>
        </div>
	</div>
</div>

<style>

.top{
    width: 300px;
    height: 300px;
    background-color: var(--box_one);
}
img{
    object-fit: cover;
    width: 300px;
    height: auto;
}

</style>