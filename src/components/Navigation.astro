---
import "../styles/style.css";
---

<header>
   <div class="logo_mobile">
        <a href="index.html">
            <img src="/logos/logo_hand.svg" alt="logo">
        </a>
    </div>
    <nav>
    <ul class="menu">
		<li><a href="/kurser">Kurser</a></li>
		<li><a href="/produkter">Produkter</a></li>
        <li class="logoet"><a href="/"><img class="logo" src="/logos/logo_hand.svg" alt="Logo"></a></li>
        <li><a href="/ommig">Om mig</a></li>
        <li><a href="#">Kurv</a></li>
    </ul>
    <div class="burger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
    </nav>
</header>

<style>
header {
    padding: 10px;
    width: 100%;
    background-color:transparent;
    position: fixed;
    top: 0;
    z-index: 10;
}

.logo{
    width: 140px;
    height: auto;
}

.logo svg{
    fill: var(--text_yellow);
}
.menu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  list-style: none;
  margin: 0% 2% 0% 2%;
  padding: 0;
}

.menu li {
  margin-right: 20px;
}

.menu li:last-child {
  margin-right: 0;
}

.menu a {
  font-size:1.8rem;
  color: var(--text_off_white);
  text-decoration: none;
  transition: color 0.2s;
}

.menu a:hover {
  color: var(--text_yellow);
}

.burger {
  width: 30px;
  height: 20px;
  cursor: pointer;
}

.burger .line {
  width: 100%;
  height: 2px;
  background-color: var(--text_off_white);
  margin-bottom: 5px;
}
.burger {
  display: none;
}

.logo_mobile{
  display: none; 
}

@media screen and (max-width: 800px) {
  .menu {
    display: none;
  }
  .burger {
    display: block;
  }
  .logoet {
  display: none;
}

header {
    display: flex;
    justify-content: space-between;
    padding: 14px;
}

.logo_mobile{
    display: block;
    margin-left: 5%;
}

.logo_mobile img{
        width: 130px;
}

  .burger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .burger.active .line:nth-child(2) {
    opacity: 0;
  }

  .burger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  nav.active .menu {
    display: block;
    background-color: var(--footer);
    position: absolute;
    top: 100px;
    left: 0;
    width: 100%;
    height: 165px;
    z-index: 10;
  }

  nav.active .menu li {
    margin: 10px 20px;
  }

  nav.active .menu a {
    font-size: 24px;
  }
nav{
    margin-right: 5%;
    display: flex;
    align-items: center;
}

header {
  background-color: var(--footer);
}

}
</style>

<script>
const burger = document.querySelector(".burger");
const nav = document.querySelector("nav");
const menu = document.querySelector(".menu");
const links = document.querySelectorAll(".menu li a");

burger.addEventListener("click", () => {
  burger.classList.toggle("active");
  nav.classList.toggle("active");
});

links.forEach((link) => {
  link.addEventListener("click", () => {
    burger.classList.remove("active");
    nav.classList.remove("active");
  });
});

</script>