---
const {data} = Astro.props
---
<article>
	<img src={`/product_pic/${data.image}`} alt="Produkt">
    <div>
    <a href={`/speaker/${data.slug}`}>
	<h3>{data.name}</h3>
    <div class="desktop_price">
	<p class="burning">{data.burning}</p>
	<p class="price">{data.price} kr.</p>
    </div>
    </a>
    </div>
</article>


<style>
img{
    width: 180px;
    height: 180px;
}

h3{
font-size: 6cqw;
}
p:last-child{
    margin-bottom: 10%;
    font-size: 4cqw;
    
}

@media (min-width: 900px) {
img{
    width: 300px;
    height: 300px;
}

h3{
font-size: 2.3cqw;
margin-bottom: 3%;
}
p:last-child{
    margin-bottom: 15%;
    font-size: 1.3cqw;
}
.desktop_price{
    display: flex;
    justify-content: space-between;
    width: 300px;

}

}
</style>