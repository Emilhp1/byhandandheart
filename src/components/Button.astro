---
import "../styles/style.css";
const {variant, text} = Astro.props
---

<div data-variant={variant}>
    <a href="/kurser">{text}</a>
</div>

<style>

[data-variant="one"]{
    display: flex;
    align-items: center;
    position: absolute;
    top: 45%;
    left: 20%;
    width: 200px;
    filter: drop-shadow(6px 4px 5px #00000069);
}

[data-variant="two"]{
    display: flex;
    align-items: center;
    position: absolute;
    top: 44%;
    left: 23%;
    width: 60%;
    filter: drop-shadow(6px 4px 5px #00000069);
}

a{
    font-family: "margaretbold";
    color: black;
    font-size: 5cqw;
    background-color: var(--buttons);
    padding: 5% 25% 5% 25%;
    transition: all 0.55s ease;
}
a:hover{
transform: scale(1.09); 
}
@media (min-width: 900px) {
[data-variant="one"]{
    width: 200px;
    top: 45%;
    left: 25%;
}

[data-variant="two"]{
    top: 44%;
    left: 40%;
    width: 20%;
}
a{
    font-size: 1.55cqw;
    padding: 5% 25% 5% 25%;
}
}

</style>