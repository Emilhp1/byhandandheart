---
import "../styles/style.css";
---
<div class="grid_1-1">
    <div class="text">
<p>Logoet “Treforken”</p>
</div>
<div class="order">
	<img class="logo_svg" src="/logos/logo_trident.svg" alt="Trefork logo">
    </div>
</div>

<style>
.text{
    background-color: var(--box_one);
    margin: 5% 6% 5% 6%;
    padding: 5%;
}
p{
    margin: 6% 0% 0% 1%;
}
p:last-child {
margin-bottom: 6%;
}
img{
    width: 50%;
    height: auto;
    display: block;
    margin-left: auto;
    margin-right: auto;
}

@media (min-width: 900px) {
.grid_1-1{
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-bottom: 4%;
}
img{
    width: 40%;
    height: auto;
    opacity: 70%;
}
.text{
    margin: 0% 20% 0% 3%;
    padding: 5%;
}
p{
    margin: 6% 0% 0% 2%;
}
}
</style>